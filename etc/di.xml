<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Filter\SimpleDirective\ProcessorPool">
        <arguments>
            <argument name="processors" xsi:type="array">
                <item name="awesomeicon" xsi:type="object">Jajuma\AwesomeHyva\Model\Template\IconProcessor</item>
            </argument>
        </arguments>
    </type>

    <type name="Jajuma\AwesomeHyva\ViewModel\SvgIcons">
        <arguments>
            <argument name="iconPathPrefix" xsi:type="string">Jajuma_AwesomeHyva::svg/</argument>
        </arguments>
    </type>
</config>
